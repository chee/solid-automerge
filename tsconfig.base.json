{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"declarationMap": true,
		"emitDeclarationOnly": true,
		"allowImportingTsExtensions": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"isolatedDeclarations": true,
		"strict": true,
		"skipLibCheck": true,
		"composite": true,
		"pretty": true,
		"rootDir": "./src",
		"rewriteRelativeImportExtensions": true
	},
	"include": ["src/*.ts"]
}
